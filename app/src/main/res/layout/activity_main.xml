<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.xiazhiri.videoEncrypt.MainActivity"
    >

    <VideoView
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        />

    <Button
        android:id="@+id/playUnencrypted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/videoView"
        android:text="Play Normal Video"
        />

    <Button
        android:id="@+id/playEncryptedDirect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/playUnencrypted"
        android:text="Play Encrypted Video (With Error)"
        />

    <Button
        android:id="@+id/playEncrypted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/playEncryptedDirect"
        android:text="Play Encrypted Video"
        />

</RelativeLayout>
